<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:background_element="$graphic:background_ability_main"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:di_title"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_btn"
        ohos:horizontal_center="true"
        ohos:orientation="horizontal"
        ohos:top_margin="5vp"
        ohos:visibility="visible">

        <include
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout="$layout:titlelayout"/>
    </DependentLayout>

    <ScrollView
        ohos:id="$+id:scrollviw"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:above="$id:btn_calculate"
        ohos:below="$id:di_title"
        ohos:bottom_margin="$float:dimens_40">

        <DirectionalLayout
            ohos:id="$+id:layout_maincontent"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:di_title"
            ohos:bottom_margin="$float:dimens_20"
            ohos:left_margin="$float:dimens_10"
            ohos:orientation="vertical"
            ohos:right_margin="$float:dimens_10"
            ohos:top_margin="$float:dimens_5">
            <DependentLayout
                ohos:id="$+id:de_myname"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_btn_outer_black"
                ohos:left_margin="$float:dimens_10"
                ohos:right_margin="$float:dimens_10"
                ohos:visibility="visible"
                >

                <DirectionalLayout
                    ohos:id="$+id:di_myname"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:top_margin="$float:dimens_10"
                    ohos:bottom_margin="$float:dimens_10"
                    ohos:left_margin="$float:dimens_10"
                    ohos:orientation="horizontal"
                    ohos:right_margin="$float:dimens_10">

                    <Text
                        ohos:id="$+id:txt_name"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text_alignment="center"
                        ohos:text="$string:name"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>

                    <TextField
                        ohos:id="$+id:et_name"
                        ohos:height="24vp"
                        ohos:width="100vp"
                        ohos:align_parent_right="true"
                        ohos:background_element="$graphic:background_btn_outer_positive"
                        ohos:hint="$string:entername"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_20"
                        ohos:text_alignment="horizontal_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"
                        ohos:top_padding="$float:dimens_3"
                        ohos:focusable="focus_disable"
                        ohos:focusable_in_touch="false"
                        ohos:text_cursor_visible="false"/>
                </DirectionalLayout>
            </DependentLayout>
            <DependentLayout
                ohos:id="$+id:de_myheight"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_btn_outer_black"
                ohos:left_margin="$float:dimens_10"
                ohos:right_margin="$float:dimens_10"
                ohos:top_margin="$float:dimens_10"
                ohos:visibility="visible"
                >

                <DirectionalLayout
                    ohos:id="$+id:di_myheight"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:left_margin="$float:dimens_10"
                    ohos:orientation="horizontal"
                    ohos:right_margin="$float:dimens_10">

                    <Text
                        ohos:id="$+id:txt_height"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_5"
                        ohos:text="$string:height"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>

                    <TextField
                        ohos:id="$+id:et_heightvalue"
                        ohos:height="24vp"
                        ohos:width="52vp"
                        ohos:align_parent_right="true"
                        ohos:background_element="$graphic:background_btn_outer_positive"
                        ohos:clickable="false"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_15"
                        ohos:text="$string:zero"
                        ohos:text_alignment="horizontal_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"
                        ohos:top_padding="3vp"
                        />

                    <Text
                        ohos:id="$+id:txt_cm"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_15"
                        ohos:text="$string:cm"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>
                </DirectionalLayout>

                <Slider
                    ohos:id="$+id:slider_myheight"
                    ohos:height="$float:dimens_5"
                    ohos:width="match_parent"
                    ohos:below="$id:di_myheight"
                    ohos:bottom_margin="$float:dimens_5"
                    ohos:horizontal_center="true"
                    ohos:left_margin="$float:dimens_10"
                    ohos:progress_color="$color:color_bg"
                    ohos:progress_width="2vp"
                    ohos:scrollbar_background_color="$color:color_bg"
                    ohos:top_margin="$float:dimens_5"
                    ohos:visibility="visible"
                    />
            </DependentLayout>

            <DependentLayout
                ohos:id="$+id:de_myweight"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_btn_outer_black"
                ohos:left_margin="$float:dimens_10"
                ohos:right_margin="$float:dimens_10"
                ohos:top_margin="$float:dimens_10"
                ohos:visibility="visible">

                <DirectionalLayout
                    ohos:id="$+id:di_myweight"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:top_margin="$float:dimens_10"
                    ohos:left_margin="$float:dimens_10"
                    ohos:orientation="horizontal"
                    ohos:right_margin="$float:dimens_10"
                    ohos:visibility="visible">

                    <Text
                        ohos:id="$+id:txt_weight"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_5"
                        ohos:text="$string:weight"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>

                    <TextField
                        ohos:id="$+id:et_weightvalue"
                        ohos:height="$float:dimens_24"
                        ohos:width="$float:dimens_52"
                        ohos:align_parent_right="true"
                        ohos:background_element="$graphic:background_btn_outer_positive"
                        ohos:clickable="false"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_15"
                        ohos:text="$string:zero"
                        ohos:text_alignment="horizontal_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"
                        ohos:top_padding="3vp"
                        />

                    <Text
                        ohos:id="$+id:txt_KG"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_15"
                        ohos:text="$string:kg"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>
                </DirectionalLayout>

                <Slider
                    ohos:id="$+id:slider_myweightn"
                    ohos:height="$float:dimens_5"
                    ohos:width="match_parent"
                    ohos:below="$id:di_myweight"
                    ohos:bottom_margin="$float:dimens_5"
                    ohos:horizontal_center="true"
                    ohos:left_margin="$float:dimens_10"
                    ohos:progress_color="$color:color_bg"
                    ohos:progress_width="$float:dimens_2"
                    ohos:scrollbar_background_color="$color:color_bg"
                    ohos:top_margin="$float:dimens_5"
                    ohos:visibility="visible"
                    />
            </DependentLayout>

            <DependentLayout
                ohos:id="$+id:de_myage"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_btn_outer_black"
                ohos:left_margin="$float:dimens_10"
                ohos:right_margin="$float:dimens_10"
                ohos:top_margin="$float:dimens_10"
                ohos:visibility="visible">

                <DirectionalLayout
                    ohos:id="$+id:di_myage"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:above="$id:btn_calculate"
                    ohos:left_margin="$float:dimens_10"
                    ohos:orientation="horizontal"
                    ohos:right_margin="$float:dimens_10"
                    ohos:top_margin="$float:dimens_5">

                    <Text
                        ohos:id="$+id:txt_age"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:horizontal_center="true"
                        ohos:left_margin="$float:dimens_5"
                        ohos:text="$string:age"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>

                    <TextField
                        ohos:id="$+id:et_agevalue"
                        ohos:height="$float:dimens_24"
                        ohos:width="$float:dimens_52"
                        ohos:align_parent_right="true"
                        ohos:background_element="$graphic:background_btn_outer_positive"
                        ohos:horizontal_center="true"
                        ohos:left_margin="35vp"
                        ohos:text="$string:zero"
                        ohos:text_alignment="horizontal_center"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"
                        ohos:top_padding="$float:dimens_3"
                        />

                </DirectionalLayout>

                <Slider
                    ohos:id="$+id:slider_myage"
                    ohos:height="$float:dimens_5"
                    ohos:width="match_parent"
                    ohos:below="$id:di_myage"
                    ohos:bottom_margin="$float:dimens_5"
                    ohos:horizontal_center="true"
                    ohos:left_margin="$float:dimens_10"
                    ohos:progress_color="$color:color_bg"
                    ohos:progress_width="$float:dimens_2"
                    ohos:scrollbar_background_color="$color:color_bg"
                    ohos:top_margin="$float:dimens_5"
                    ohos:visibility="visible"
                    />
            </DependentLayout>

            <DependentLayout
                ohos:id="$+id:de_mygender"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:background_element="$graphic:background_btn_outer_black"
                ohos:left_margin="$float:dimens_10"
                ohos:right_margin="$float:dimens_10"
                ohos:top_margin="$float:dimens_10"
                ohos:visibility="visible">

                <DirectionalLayout
                    ohos:id="$+id:di_mygender"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:above="$id:btn_calculate"
                    ohos:bottom_margin="$float:dimens_10"
                    ohos:left_margin="$float:dimens_10"
                    ohos:orientation="horizontal"
                    ohos:right_margin="$float:dimens_10"
                    ohos:top_margin="$float:dimens_5">

                    <Text
                        ohos:id="$+id:txt_gender"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="$float:dimens_10"
                        ohos:text="$string:gender"
                        ohos:text_color="$color:white"
                        ohos:text_size="14fp"
                        ohos:top_margin="$float:dimens_5"/>

                    <RadioContainer
                        ohos:id="$+id:radio_container"
                        ohos:height="match_content"
                        ohos:width="match_parent"
                        ohos:left_margin="$float:dimens_5"
                        ohos:orientation="vertical"
                        ohos:top_margin="$float:dimens_5"
                        >

                        <RadioButton
                            ohos:id="$+id:radio_button_1"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="$string:male"
                            ohos:text_color_off="$color:white"
                            ohos:text_color_on="$color:color_bg"
                            ohos:text_size="15fp"/>

                        <RadioButton
                            ohos:id="$+id:radio_button_2"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="$string:female"
                            ohos:text_color_off="$color:white"
                            ohos:text_color_on="$color:color_bg"
                            ohos:text_size="15fp"/>
                    </RadioContainer>
                </DirectionalLayout>

            </DependentLayout>

        </DirectionalLayout>

</ScrollView>
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="horizontal_center"
        ohos:below="$id:layout_maincontent">

        <Button
            ohos:id="$+id:btn_calculate"
            ohos:height="$float:dimens_30"
            ohos:width="match_parent"
            ohos:align_parent_bottom="true"
            ohos:background_element="$graphic:background_btn"
            ohos:bottom_padding="3vp"
            ohos:horizontal_center="true"
            ohos:text="$string:calculate"
            ohos:text_alignment="center"
            ohos:text_color="$color:white"
            ohos:text_size="15fp"
            ohos:text_weight="500"
            ohos:top_padding="$float:dimens_3"
            ohos:visibility="visible"
            />
    </DependentLayout>
</DependentLayout>
